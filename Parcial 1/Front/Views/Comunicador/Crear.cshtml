@using Entidades;
@using Negocio;
@model Entidades.Abonado

<div class="jumbotron">
	<h1>Nuevo abonado</h1>
</div>

<div class="row">
	<div class="col-12">
		<div class="mb-3">
			<label for="numero" class="form-label">Número</label>
			<input type="text" class="form-control" id="numero">
		</div>

		<div class="mb-3">
			<select id="tipo" class="form-select" aria-label="Tipo">
				@foreach (string tipo in Enum.GetNames(typeof(TipoTelefono))) {
					<option value="@tipo">@tipo</option>
				}
			</select>
		</div>

		<button onclick="guardar()" type="button" class="btn btn-outline-primary">✔</button>
	</div>
</div>

<script>
	const guardar = async () => {
		await post('/Comunicador/CrearComunicador/', {
			numero: document.getElementById("numero").value,
			tipo: document.getElementById("tipo").value
		});
		window.location.href = "/Comunicador";
	}
</script>